<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="report_bottling_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="container">
                        <div class="row gy-5">
                            <div class="col"></div>
                            <div class="col">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th scope="row" class="table-dark">QUOTE ID#</th>
                                            <td>
                                                <span t-field="doc.name" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row" class="table-dark">QUOTATION DATE</th>
                                            <td>
                                                <span t-field="doc.date_order" t-options='{"format": "dd/MM/yyyy"}' />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row gy-5">
                            <div class="col">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="table-dark">CUSTOMER</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div t-field="doc.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="table-dark">SHIP TO</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <div t-field="doc.partner_shipping_id" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row gy-5">
                            <div class="col">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="table-dark">SCOPE OF SERVICE</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="table-borderless">
                                            <td>
                                                <span t-field="doc.opportunity_name" />
                                            </td>
                                        </tr>
                                        <tr class="table-borderless">
                                            <td>
                                                <span t-field="doc.travel_in" />
                                            </td>
                                        </tr>
                                        <tr class="table-borderless">
                                            <td>
                                                <span t-field="doc.travel_out" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row gy-5">
                            <div class="col">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th name="th_no" class="table-dark">No.</th>
                                            <th name="th_item" class="table-dark">Item</th>
                                            <th name="th_activity" class="table-dark">Activity</th>
                                            <th name="th_qty" class="table-dark">QTY</th>
                                            <th name="th_rate" class="table-dark">Rate</th>
                                            <th name="th_amount" class="table-dark">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-set="i" t-value="1" />
                                        <t t-foreach="doc.order_line" t-as="product">
                                            <tr>
                                                <td name="td_no">
                                                    <span t-esc="i" />
                                                </td>
                                                <td name="td_item">
                                                    <span t-field="product.product_id.name" />
                                                </td>
                                                <td name="td_activity">
                                                    <span t-field="product.name" />
                                                </td>
                                                <td name="td_qty">
                                                    <span t-field="product.product_uom_qty" />
                                                </td>
                                                <td name="td_rate">
                                                    <span t-field="product.price_unit" />
                                                </td>
                                                <td name="td_amount">
                                                    <span t-field="product.price_total" />
                                                </td>
                                            </tr>
                                            <t t-set="i" t-value="i+1" />
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row gy-5">
                            <div class="col"></div>
                            <div class="col">
                                <table class="table">
                                    <tbody>
                                        <tr>
                                            <th scope="row" class="table-dark">SUBTOTAL#</th>
                                            <td>
                                                <span t-field="doc.amount_untaxed" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row" class="table-dark">TAX</th>
                                            <td>
                                                <span t-field="doc.amount_tax" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row" class="table-dark">TOTAL</th>
                                            <td>
                                                <span t-field="doc.amount_total" />
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <p style="page-break-after:always;"></p>
                        <div class="page">
                            <div>
                                <h3>TERMS OF SERVICE</h3>
                            </div>
                            <div>
                                <span t-field="doc.note" />
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
