<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record model="ir.ui.view" id="sale_view_order_form">
        <field name="name">sale.order.view.form.inherit.pdf</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">

            <field name="partner_id" position="after">
                <field name="opportunity_name" />
                <field name="travel_in" />
                <field name="travel_out" />
            </field>
        </field>
    </record>
    <record id="odoo_pdf_action" model="ir.actions.report">
        <field name="name">Bottling PDF Report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-html</field>
        <field name="report_name">odoo_pdf.report_bottling_document</field>
        <field name="report_file">odoo_pdf.report_bottling</field>
        <field name="binding_model_id" ref="sale.model_sale_order" />
        <field name="binding_type">report</field>
    </record>
</odoo>
