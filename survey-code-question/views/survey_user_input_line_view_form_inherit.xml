<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Not sure what this view is about. haven't found it on the views on the UI-->
    <!-- Hoped it would be the web user input, but that's more in the Web templates-->
    <record id="survey_user_input_line_view_form_inherit" model="ir.ui.view">
        <field name="name">survey.question.views.inherit</field>
        <field name="model">survey.user_input.line</field>
        <field name="inherit_id" ref="survey.survey_user_input_line_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='value_char_box']" position="after">
                <field name="value_code_box" colspan='2' attrs="{'invisible': [('answer_type', '!=', 'code_box')]}" />
            </xpath>
        </field>
    </record>
</odoo>
