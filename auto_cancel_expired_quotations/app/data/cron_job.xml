<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cron_cleanup_quotations" model="ir.cron">
        <field name="name">Cleanup Expired Quotations</field>
        <field name="numbercall">-1</field> <!--An integer value specifying how many times the job is executed. A negative value means no limit.-->
        <field name="interval_type">days</field>
        <field name="interval_number">1</field>
        <field name="doall">0</field> <!--A boolean value indicating whether missed occurrences should be executed when the server restarts.-->
        <field name="model_id" ref="model_sale_order"/>
        <field name="nextcall" eval="(datetime.now().replace(hour=0,minute=0,microsecond=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
        <field name="active">1</field>
        <field name="code">model._cancel_expired_quotations()</field>
    </record>
</odoo>
