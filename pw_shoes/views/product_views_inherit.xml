<?xml version="1.0" encoding="utf-8"?>
<!--modify the page displaying products so that we can see our new fields, price per pair and pairs per case.-->

<odoo>
    <data>

        <record model="ir.ui.view" id="product_product_template_kanban_view_inherit_pw_shoes">
            <field name="name">product.product.template.kanban.view.inherit.pw.shoes</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_kanban_view"/>

            <field name="arch" type="xml">
                <xpath expr="//div[@name='product_lst_price']" position="after">
                    <div class="mt-1">
                        Pairs per case: <field name="pair_per_case"/>
                    </div>
                    <div class="mt-1">
                        Price per pair: <field name="price_per_pair"/>
                    </div>
                </xpath>
            </field>

        </record>


        <record model="ir.ui.view" id="product_product_template_only_form_view_inherit_pw_shoes">
            <field name="name">product.product.template.only.form.view.inherit.pw.shoes</field>
            <field name="model">product.template</field>

            <field name="inherit_id" ref="product.product_template_only_form_view"/>

            <field name="arch" type="xml">

                
                <field name="list_price" position="attributes">
                    <attribute name="attrs">{'readonly': ['|',('pair_per_case', '!=', 0), ('price_per_pair', '!=', 0)]}</attribute>
                </field>
            


                <xpath expr="//div[@name='pricing']" position="after">
                    <field name="pair_per_case"/>
                    <field name="price_per_pair"/>
                    </xpath>
            </field>

        </record>
    </data>
</odoo>
