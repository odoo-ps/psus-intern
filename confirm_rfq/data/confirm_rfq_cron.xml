<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="ir_cron_auto_confirm_rfq" model="ir.cron">
            <field name="name">Auto Confirm RFQs</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=0, second=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="purchase.model_purchase_order"/>
            <field name="code">model._auto_confirm_rfqs()</field>
            <field name="state">code</field>
        </record>
    </data>
</odoo>
