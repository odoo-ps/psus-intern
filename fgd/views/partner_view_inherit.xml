<?xml version="1.0" encoding="utf-8"?>

<odoo>
    
    <record id="res_partner_form_view_inherit" model="ir.ui.view">
        <field name="name">res.partner.form.inherit"</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet//notebook//page[@name='sales_purchases']//group[@name='container_row_2']//group[@name='sale']">
                <field name="property_product_pricelist" position="after"/>
                <field name="user_is_sales_administrator" invisible="1"/>
            </xpath>

            <xpath expr="//sheet//notebook//page[@name='sales_purchases']//group[@name='container_row_2']//group[@name='sale']//field[@name='user_id']" position="attributes">
                <attribute name="attrs">{"readonly":[("user_is_sales_administrator","=",False),("id","!=",False)]}</attribute>
            </xpath>
            
            <xpath expr="//sheet//notebook//page[@name='sales_purchases']//group[@name='container_row_2']//group[@name='sale']//field[@name='property_product_pricelist']" position="attributes">
                <attribute name="attrs">{'readonly':[('user_is_sales_administrator','=',False),('id','!=',False)]}</attribute>
            </xpath>

        </field>
    </record>
</odoo>
