<?xml version="1.0" encoding="utf-8"?>

<odoo>
        <record id="product_template_views_inherit_pandw" model="ir.ui.view">
            <field name="name">product.template.inherit.pandw</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='list_price']" position="before">
                    <field name="pairs_per_case" />
                    <field name="price_per_pair" />
                </xpath>
                <field name="list_price" position="attributes">
                    <attribute name="attrs">
                        {'readonly':[
                        '|', 
                        ('pairs_per_case','!=', 0), 
                        ('price_per_pair', '!=', 0)
                        ]}
                    </attribute>
                </field>
            </field>
        </record>
</odoo>
