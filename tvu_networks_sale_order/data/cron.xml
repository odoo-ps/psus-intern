<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="cron_cleanup_quotations_tvu_networks" model="ir.cron">
        <field name="name">Cleanup Expired Quotations</field>
        <field name="numbercall">-1</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="doall">0</field>
        <field name="model_id" ref="sale.model_sale_order" />
        <field name="nextcall"
            eval="(DateTime.now().replace(hour=0,minute=0) + timedelta(days=1)).strftime('%Y-%m-%d %H:%M:%S')" />
        <field name="code">model._cancel_expired_quotations()</field>
    </record>
</odoo>