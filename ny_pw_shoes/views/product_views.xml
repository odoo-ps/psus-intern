<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_view_inherit">
            <field name="name">product.template.product.form.inherit.ny.shoes</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <field name="barcode" position="after">
                    <field name="pair_per_case">Pair per case</field>
                    <field name="price_per_pair">Price per pair</field>
                    <field name="fields_empty" invisible="1"/>
                    <field name="sales_price" force_save="1" attrs="{'readonly':[('fields_empty','=', False)]}">Sales price</field>
                </field>
            </field>
        </record>
    </data>
</odoo>