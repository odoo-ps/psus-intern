<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_template_form_inherit_shoe">
            <field name="name">product.template.form.inherit.shoe</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view" />
            <field name="arch" type="xml">
                <field name="list_price" position="attributes">
                    <attribute name="attrs">{'readonly': [('pair_per_case', '!=', 0.0), ('price_per_pair', '!=', 0.0)]}</attribute>
                </field>
                <xpath expr="//div[@name='pricing']" position="after">
                    <field name="pair_per_case" />
                    <field name="price_per_pair" class="oe_inline" widget="monetary"
                           options="{'currency_field': 'currency_id', 'field_digits': True}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>
