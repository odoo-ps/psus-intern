<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_form_inherit_fgd" model="ir.ui.view">
            <field name="name">res.partner.view.form.inherit.fgd</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="groups_id" eval="[(4, ref('product.group_product_pricelist'))]" />
            <field name="arch" type="xml">
                <field name="user_id" position="before">
                    <field name="partner_create_only" invisible="1" />
                </field>
                <field name="user_id" position="attributes">
                    <attribute name="attrs">
                        {
                            'readonly': [('partner_create_only','=',True)],
                        }
                    </attribute>
                </field>
                <field name="property_product_pricelist" position="before">
                    <field name="partner_create_only" invisible="1" />
                </field>
                <field name="property_product_pricelist" position="attributes">
                    <attribute name="attrs">{
                        'readonly': [('partner_create_only','=',True)],
                        'invisible': [('is_company','=',False),('parent_id','!=',False)],
                    }</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>