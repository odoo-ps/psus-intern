<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_docs_open" model="ir.actions.act_url">
        <field name="name">Open Documentation</field>
        <field name="url">/docs/index.html</field>
        <field name="target">new</field>
    </record>

    <menuitem
        id="docs_menu"
        name="Documentation"
        sequence="10"
        action="action_docs_open"
        web_icon="docs,static/description/icon.png" />

    <record id="res_config_settings_view_form_inherit_docs" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Documentation" string="Documentation" data-key="docs">
                    <h2>Documentation</h2>
                    <div id="docs" class="row mt16 o_settings_container">
                        <div id="docs_setting" class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">PDoc Specs</span>
                                <div class="text-muted">
                                    A comma-separated list of modules to document.
                                    See
                                    <a href="https://pdoc.dev/docs/pdoc.html#control-what-is-documented" target="_blank">this page</a>
                                    for more information.
                                </div>
                                <field name="pdoc_specs" class="w-100" />
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>