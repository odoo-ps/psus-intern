<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_product_template_form_inherit_shoe">
            <field name="name">product.template.form.inherit.shoe</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"></field>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='list_price']" position="before">
                    <field name="ppc"/>
                    <field name="ppp"/>
                </xpath>
                <field name="list_price" position="attributes">
                    <attribute name="attrs">{'readonly':['|',('ppc','!=',0),('ppp','!=',0)]}</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
