<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!--tree view-->
        <record model="ir.ui.view" id="edi_tag_view_tree">
            <field name="name">edi.tag.tree</field>
            <field name="model">edi.tag</field>
            <field name="arch" type="xml">
                <tree string="EDI Tags" edit="true" create="false">
                    <field name="field_id"/>
                    <field name="ttype"/>
                    <field name="field_path"/>
                    <field name="xml_tag"/>
                </tree>
            </field>
        </record>
        <!--form view-->
        <record model="ir.ui.view" id="edi_tag_view_form">
            <field name="name">edi.tag.view.form</field>
            <field name="model">edi.tag</field>
            <field name="arch" type="xml">
                <form string="EDI tags :)" create="false">
                    <sheet>
                        <group>
                            <field name="model" invisible="1"/>
                            <field name="xml_tag"/>
                            <field name="is_static"/>

                            <field name="model_name" invisible="1"/>
                            <field name="parent_model"/>
                            <field name="field_id" attrs="{'invisible':[('is_static', '=', True)]}"/>
                            <field name="field_path" attrs="{'invisible':[('is_static', '=', True)]}"/>

                            <field name="ttype" readonly="1" attrs="{'invisible':[('is_static','=','True')]}"/>

                            <field name="x2many_record_tag" attrs="{'invisible':[('ttype','!=','many2many'), ('ttype','!=','one2many')]}"/>
                            <field name="relation" attr="{'invisible':[('ttype','!=','many2many'), ('ttype','!=','one2many')]}"/>
                            
                            <field name="static_content" attrs="{'invisible':[('is_static', '=', False)]}"/>
                            
                            <field name="x2many_subtag_ids" attrs="{'invisible':[('ttype','!=','many2many'), ('ttype','!=','one2many')]}"/>

                            <field name="child_tag_ids"/>
                            <button name="add_children" type="object" string="Add Children EDI Tags"/>
<!--                            <field name="parent_tag_id" readonly="1"/>-->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>