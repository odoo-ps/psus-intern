<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- tree view -->
        <record model="ir.ui.view" id="custom_mapping_view_tree">
            <field name="name">edi2.custom.mapping.tree</field>
            <field name="model">edi2.custom.mapping</field>
            <field name="arch" type="xml">
                <tree string="Custom Mappings">
                    <field name="name"/>
                    <field name="model"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="custom_mapping_view_form">
            <field name="name">edi2.custom.mapping.form</field>
            <field name="model">edi2.custom.mapping</field>
            <field name="arch" type="xml">
                <form string="Custom Mappings">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <field name="model"/>
                        </group>

                        <group>
                            <field name="field_ids" widget="many2many" string="Fields to Export">
                                <tree>
                                    <field name="field_description"/> <!-- human readable name -->
                                    <field name="name"/> <!-- technical name -->
                                    <field name="ttype"/> <!-- data type -->
                                </tree>
                            </field>
                        </group>
                    </sheet>

                    <button name="log_field_data" type="object" string="Log Data"/>
                </form>
            </field>
        </record>
    </data>
</odoo>