<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <!-- tree view -->
        <record model="ir.ui.view" id="custom_mapping_view_tree">
            <field name="name">edi2.custom.mapping.tree</field>
            <field name="model">edi2.custom.mapping</field>
            <field name="arch" type="xml">
                <tree string="Custom Mappings">
                    <field name="name"/>
                    <field name="model"/>
                </tree>
            </field>
        </record>

        <!-- form view -->
        <record model="ir.ui.view" id="custom_mapping_view_form">
            <field name="name">edi2.custom.mapping.form</field>
            <field name="model">edi2.custom.mapping</field>
            <field name="arch" type="xml">
                <form string="Custom Mappings">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <field name="model"/>
                            <field name="root_tag"/>
                            <field name="record_tag"/>
                            <field name="record_document_mode"/>
                            <!--<span class="o_many2one_field"/>-->
                        </group>
                        <group>
                            <field name="edi_tag" widget="one2many" string="Fields to Export">
                                <tree>
                                    <field name="field_id"/>
                                    <!--<field name="sub"/>-->
                                    <field name="xml_tag"/>
                                    <field name="model"/>
                                    <field name="ttype"/>
                                    <field name="relation"/>
                                    <field name="field_tree"/>
                                </tree>
                                <!--
                                <form string="Add fields">
                                        <sheet>
                                            <group>
                                                <field name="field_id" domain="[('model_id','=',model)]"/>
                                                <field name="sub" domain="[('model_id','=',relation)]"/>
                                                <field name="xml_tag"/>
                                                <field name="model" invisible="1"/>
                                                <field name="ttype"/>
                                                <field name="relation"/>
                                                <button name="get_subfields" type="object" string="Subfields" attrs="{'invisible': [('ttype','not in',['many2one','one2many','many2many'])]}"/>
                                            </group>
                                        </sheet>
                                </form>
                                -->
                            </field>
                        </group>
                    </sheet>
                    <button name="export" type="object" string="Export"/>
                    <button name="log_field_data" type="object" string="Log Data"/>
                </form>
            </field>
        </record>
    </data>
</odoo>
