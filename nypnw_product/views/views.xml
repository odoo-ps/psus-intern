<odoo>
  <data>
    <record id="product_category_form_view_inherit_nypnw_product" model="ir.ui.view">
      <field name="name">product.category.view.form.inherit</field>
      <field name="model">product.category</field>
      <field name="inherit_id" ref="product.product_category_form_view" />
      <field name="arch" type="xml">
        <sheet>
          <group string="Name Generation">
            <field name="sequence_id" />
          </group>
        </sheet>
      </field>
    </record>

    <record id="product_template_only_form_view_inherit_nypnw_product" model="ir.ui.view">
      <field name="name">product.template.view.form.inherit</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_only_form_view" />
      <field name="arch" type="xml">
        <field name="name" position="attributes">
          <attribute name="attrs">{'required':[('categ_id','=',False)]}</attribute>
          <attribute name="placeholder">Auto-generated</attribute>
        </field>
        <field name="type" position="after">
          <field name="product_gender" />
        </field>
      </field>
    </record>

  </data>
</odoo>