<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.actions.act_window" id="product_list_action">
        <field name="name">Product List</field>
        <field name="res_model">product.list</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first product list and start adding products to it.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_product_list"
        name="Product List"
        action="product_list_action"
        parent="sale.product_menu_catalog"
        sequence="10"/>
</odoo>
