<?xml version="1.0" encoding="UTF-8"?>

<odoo>
  <data>
    <record model="ir.actions.act_window" id="custom_product_action">
      <field name="name">Custom Products</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">custom.products</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create the first custom product list
        </p>
      </field>
    </record>

    <record model="ir.ui.view" id="custom_product_list">
      <field name="name">custom.products.list</field>
      <field name="model">custom.products</field>
      <field name="arch" type="xml">
          <tree string="Custom Product List">
              <field name="product_list_name" />
          </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="custom_product_form">
      <field name="name">custom.products.list</field>
      <field name="model">custom.products</field>
      <field name="arch" type="xml">
          <form string="Custom Product Form">
            <sheet>
              <group>
                <field name="product_list_name" />
              </group>
              <notebook>
                <page string="Product List" name="products">
                  <field name="product_ids" />
                </page>
                <page string="Customers That Use This List" name="customer_list">
                  <field name="customer_ids" />
                </page>
              </notebook>
            </sheet>
          </form>
      </field>
  </record>

    <menuitem name="Product Lists"
              id="custom_product_list"
              parent="sale.product_menu_catalog"
              action="custom_product_action"/>
  </data>
</odoo>