<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_server_action_form" model="ir.ui.view">
        <field name="name">Server.Action.inherit</field>
        <field name="model">ir.actions.server</field>
        <field name="inherit_id" ref="base.view_server_action_form" />
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='link_field_id']" position="after">
                <field name="api_connection_id" attrs="{'invisible': [('state', '!=', 'api_call')],
                            'required': [('state', '=', 'api_call')]}" />
                <field name="resource_ref" attrs="{'invisible': [('state', '!=', 'api_call')]}" />
                <field name="chatter" attrs="{'invisible': [('state', '!=', 'api_call')],
                'required': [('state', '=', 'api_call')]}" />
            </xpath>
            <notebook>
                <page string="Payload" name="api_payload" autofocus="autofocus" attrs="{'invisible':[('state','!=','api_call')]}">
                    <group>
                        <field name="payload" widget="ace" class="oe-bordered-editor" options="{'style-inline': true, 'codeview': true }" />
                    </group>
                    <group>
                        <group>
                            <field name="rendered_XML_payload" />
                        </group>
                        <group>
                            <field name="rendered_JSON_payload" />
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="params_ids">
                                <tree string="Params" editable="bottom">
                                    <field name="key" />
                                    <field name="value" />
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="json_params" />
                        </group>
                    </group>
                </page>
                <page string="Logs" name="api_logs" autofocus="autofocus" attrs="{'invisible':[('state','!=','api_call')]}">
                    <group>
                        <field name="log_ids">
                            <tree string="logs" editable="bottom" decoration-success="status in [200,201]" decoration-danger="status >= 400" decoration-warning="200 > status">
                                <field name="create_date" />
                                <field name="call" />
                                <field name="status" />
                            </tree>
                        </field>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
