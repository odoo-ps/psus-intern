<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_server_action_form" model="ir.ui.view">
        <field name="name">Server.Action.inherit</field>
        <field name="model">ir.actions.server</field>
        <field name="inherit_id" ref="base.view_server_action_form" />
        <field name='arch' type='xml'>
            <xpath expr="//field[@name='link_field_id']" position="after">
                <field name="api_id" attrs="{'invisible': [('state', '!=', 'api_call')],
                            'required': [('state', '=', 'api_call')]}" />
            </xpath>
            <notebook>
                <page string="Payload" name="api_payload" autofocus="autofocus" attrs="{'invisible':[('state','!=','api_call')]}">
                    <group>
                        <group>
                            <field name="payload_ids">
                                <tree string="Payloads" editable="bottom">
                                    <field name="key" />
                                    <field name="value" />
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="json_payload"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="params_ids">
                                <tree string="Params" editable="bottom">
                                    <field name="key" />
                                    <field name="value" />
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="json_params"/>
                        </group>
                    </group>
                </page>
                <page string="Response" name="api_response" attrs="{'invisible':[('state','!=','api_call')]}" >
                    <field name="response" widget="ace" options="{'mode': 'code'}" />
                </page>
            </notebook>
        </field>
    </record>
</odoo>
