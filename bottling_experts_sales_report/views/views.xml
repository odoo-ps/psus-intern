<odoo>
  <data>
    <record id="action_report_sale_order" model="ir.actions.report">
      <field name="name">BEXP / Estimate</field>
      <field name="model">sale.order</field>
      <field name="report_type">qweb-html</field>
      <field name="report_name">bottling_experts_sales_report.report_bexp_quotation</field>
      <field name="print_report_name">'%s' % object.name</field>
      <field name="binding_model_id" ref="sale.model_sale_order" />
      <field name="binding_type">report</field>
    </record>

    <record id="view_order_form_inherit_bexp" model="ir.ui.view">
      <field name="name">sale.order.view.form.inherit</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form" />
      <field name="arch" type="xml">
        <notebook>
          <page name="bexp" string="BEXP">
            <group>
              <field name="final_client" />
              <field name="opportunity_id" />
              <field name="job_site" />
              <field name="travel_in" />
              <field name="travel_out" />
            </group>
          </page>
        </notebook>
      </field>
    </record>

  </data>
</odoo>