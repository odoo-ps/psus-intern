<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="component_search_wizard_view_form" model="ir.ui.view">
        <field name="name">component.search.wizard.view.form</field>
        <field name="model">component.search.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Search Components For">
                <field name="search_line_ids" widget="one2many_list">
                    <tree string="Components" editable="bottom">
                        <field name="component_id" />
                    </tree>
                </field>
                <footer>
                    <button name="action_search" type="object"
                        string="Search" class="oe_highlight" />
                    <button string="Cancel" class="btn btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>