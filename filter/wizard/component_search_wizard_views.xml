<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="component_search_wizard_view_form" model="ir.ui.view">
        <field name="name">component.search.wizard.view.form</field>
        <field name="model">component.search.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Search Components For">
                <group>
                    <field name="brand_id" options="{'no_create': True}" />
                    <field name="model_id" options="{'no_create': True}" />
                    <field name="version_id" options="{'no_create': True}" />
                </group>
                <group>
                    <field name="internal_id" options="{'no_create': True}" />
                    <field name="external_id" options="{'no_create': True}" />
                    <field name="is_completed" invisible="1" />
                </group>
                <footer>
                    <button name="action_search_wizard" type="object"
                        string="Search" class="oe_highlight" />
                </footer>
                <group>
                    <h1>
                        <field name="name" />
                    </h1>
                </group>
                <notebook attrs="{'invisible': [('is_completed', '=', False)]}">
                    <page string="Results Found" nolabel="1">
                        <field name="component_ids" />
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="launch_component_search_wizard" model="ir.actions.act_window">
        <field name="name">Component Search</field>
        <field name="res_model">component.search.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>
</odoo>