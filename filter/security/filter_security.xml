<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_filter" model="ir.module.category">
        <field name="name">Filter</field>
        <field name="description">Helps search through your products to find a compatible part.</field>
        <field name="sequence">1</field>
    </record>

    <record id="group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_filter" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_filter" />
        <field name="implied_ids" eval="[(4, ref('group_user'))]" />
    </record>

    <data noupdate="1">
        <record id="filter_user" model="ir.rule">
            <field name="name">User</field>
            <field name="model_id" ref="model_component" />
            <field name="groups" eval="[(4, ref('group_user'))]" />
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="0" />
            <field name="perm_create" eval="0" />
            <field name="perm_unlink" eval="0" />
            <field name="domain_force">[]</field>
        </record>

        <record id="filter_manager_rule" model="ir.rule">
            <field name="name">Manager</field>
            <field name="model_id" ref="model_component" />
            <field name="groups" eval="[(4, ref('group_manager'))]" />
            <field name="perm_read" eval="1" />
            <field name="perm_write" eval="1" />
            <field name="perm_create" eval="1" />
            <field name="perm_unlink" eval="1" />
            <field name="domain_force">[(1, '=', 1)]</field>
        </record>
    </data>
</odoo>