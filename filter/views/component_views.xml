<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="component_view_tree" model="ir.ui.view">
        <field name="name">component.view.tree</field>
        <field name="model">component</field>
        <field name="arch" type="xml">
            <tree string="All Components">
                <field name="name" />
                <field name="brand_id" />
                <field name="model_id" />
                <field name="version_id" />
                <field name="internal_id" />
                <field name="external_id" />
            </tree>
        </field>
    </record>

    <record id="component_view_form" model="ir.ui.view">
        <field name="name">component.view.form</field>
        <field name="model">component</field>
        <field name="arch" type="xml">
            <form string="New Component">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="brand_id" />
                            <field name="model_id" />
                            <field name="version_id" />
                        </group>
                        <group>
                            <field name="internal_id" />
                            <field name="external_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="component_main_action" model="ir.actions.act_window">
        <field name="name">Available Components</field>
        <field name="res_model">component</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>