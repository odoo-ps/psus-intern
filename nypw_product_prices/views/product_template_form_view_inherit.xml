<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_view_inherit">
            <field name="name">	product.template.view.inherit</field>
            <field name='model'>product.template</field>
            <field name='inherit_id' ref='product.product_template_form_view' />
            <field name='arch' type='xml'>
                 <xpath expr="//field[@name='invoice_policy']" position='after'>
                    <field name='pairs_per_case' />
                    <field name='price_per_pair' />
                </xpath>
                <xpath expr="//field[@name='list_price']" position="attributes">
                    <attribute name="attrs">{'readonly': [('pairs_per_case','!=',0)]}</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>