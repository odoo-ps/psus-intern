<?xml version="1.0" encoding="utf-8"?>

<odoo>
  <data>
    <record id="product_list_action" model="ir.actions.act_window">
      <field name="name">Product Lists</field>
      <field name="res_model">product.list</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem
      id="product.list_menu"
      name="Product Lists"
      action="product_list_action"
      parent="sale.product_menu_catalog"
      sequence="10" />

    <record id="product_list_view_tree" model="ir.ui.view">
      <field name="name">product.list.view.tree</field>
      <field name="model">product.list</field>
      <field name="arch" type="xml">
        <tree string="Product Lists">
          <field name="name" />
          <field name="product_ids" />
        </tree>
      </field>
    </record>

    <record id="product_list_view_form" model="ir.ui.view">
      <field name="name">product.list.view.form</field>
      <field name="model">product.list</field>
      <field name="arch" type="xml">
        <form string="Edit">
          <sheet>
            <h1>
              <field name="name" />
            </h1>
            <group>
              <group>
                <field name="tag_ids" widget="many2many_tags" />
              </group>
            </group>
            <notebook>
              <page name="product_list" string="Product List">
                <field name="product_ids">
                  <tree>
                    <field name="name" string="Product Name" />
                    <field name="invoice_policy" string="Invoicing Policy"/>
                    <field name="lst_price" string="Cost" />
                    <!-- <field name="qty_available" string="Quantity On Hand" />
                    <field name="virtual_available" string="Forecasted Quantity"/> -->
                    <field name="uom_name" string="Unit of Measurement"/>
                  </tree>
                </field>
              </page>
              <page name="customers" string="Customers That Use This List">
                <field name="partner_ids" readonly="1" />
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>