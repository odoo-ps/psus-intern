<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-right')]" position="after">
            <div class="client-detail">
                <span classs="label">Costumer Type</span>
                <select class="ClientType-detail needsclick" name="costumer_type" t-on-change="captureChange" t-att-value="props.partner.costumer_type || ''">

                        <option value="patient">Patient</option>
                        <option value="consumer">Consumer</option>
                        <option value="caregiver">Care Giver</option>
                        <option value="externalpatient">External Patient</option>
                    
                </select>
            </div>
        </xpath>
    </t>
</templates>
