<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="3pl_stock_picking_form" model="ir.ui.view">
        <field name="name">3PL Central: Transfer Form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="after">
                <field name="customer_reference"/>
                <field name="customer_expected_date"/>
            </xpath>
            <xpath expr="//field[@name='carrier_id']" position="after">
                <field name="shipping_collect_account"/>
                <field name="shipping_carrier"/>
                <field name="shipping_billing_code"/>
                <field name="ship_priority"/>
                <field name="warehouse_instructions"/>
                <!-- <field name="warehouse_instructions_edi"/> -->
            </xpath>
            <xpath expr="//field[@name='origin']" position="after">
                <field name="edi_status"/>
                <field name="edi_sync_time" attrs="{'invisible': [('edi_status','=','pending')]}"/>
            </xpath>
        </field>
    </record>
</odoo>
