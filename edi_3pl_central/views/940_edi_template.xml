<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="export_delivery_order_xml">
        <WarehouseTransactions>
            <WarehouseTransaction>
                <TransInfo>
                    <ReferenceNum><t t-esc="picking.name"/></ReferenceNum>
                    <PONum><t t-esc="picking.customer_reference"/></PONum>
                    <ExpectedDate><t t-esc="picking.customer_expected_date" t-options='{"widget": "date", "format": "yyyy-MM-dd"}'/></ExpectedDate>
                    <EarliestShipDate><t t-esc="picking.scheduled_date" t-options='{"widget": "date", "format": "yyyy-MM-dd"}'/></EarliestShipDate>
                </TransInfo>
                <ShipTo>
                    <Name><t t-esc="picking.partner_id.name"/></Name>
                    <CompanyName><t t-esc="picking.partner_id.parent_id.name"/></CompanyName>
                    <Address>
                        <Address1><t t-esc="picking.partner_id.street"/></Address1>
                        <Address2><t t-esc="picking.partner_id.street2"/></Address2>
                        <City><t t-esc="picking.partner_id.city"/></City>
                        <State><t t-esc="picking.partner_id.state_id.code"/></State>
                        <Zip><t t-esc="picking.partner_id.zip"/></Zip>
                        <Country><t t-esc="picking.partner_id.country_id.code"/></Country>
                    </Address>
                    <PhoneNumber1><t t-esc="picking.partner_id.phone"/></PhoneNumber1>
                </ShipTo>
                <ShippingInstructions>
                    <Carrier><t t-esc="picking.shipping_carrier.carrier_name"/></Carrier>
                    <BillingCode><t t-esc="picking.shipping_carrier.billing_code"/></BillingCode>
                    <Account><t t-esc="picking.shipping_collect_account"/></Account>
                </ShippingInstructions>
                <Notes><t t-esc="picking.warehouse_instructions_edi"/></Notes>
                <orderItems>
                    <t t-foreach="picking.move_lines" t-as="move_line">
                        <OrderItem t-if="move_line.forecast_availability > 0">
                            <SKU><t t-esc="move_line.product_id.default_code"/></SKU>
                            <OrderQty><t t-esc="move_line.forecast_availability"/></OrderQty>
                            <UPC><t t-esc="move_line.product_id.barcode"/></UPC>
                            <SavedElements>
                                <CodeDescrPair>
                                    <Code>OdooStockMoveID</Code>
                                    <Description><t t-esc="move_line.id"/></Description>
                                </CodeDescrPair>
                            </SavedElements>
                        </OrderItem>
                    </t>
                </orderItems>
            </WarehouseTransaction>
        </WarehouseTransactions>
    </template>
</odoo>
