<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="OrderReceipt" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-right')]" position="inside">
            <div class="client-detail">
                <span class="label">Type</span>
                <select class="detail client-custumer-type needsclick" name="customer_type" t-on-change="captureChange">
                    <option t-if="props.partner.customer_type"
                      t-att-value="props.partner.customer_type" t-att-selected="props.partner.customer_type ? props.partner.customer_type : undefined">
                        <t t-esc="props.partner.customer_type.charAt(0).toUpperCase() + props.partner.customer_type.slice(1)" />
                    </option>
                    <option t-else="" value="undefined">...</option>
                    <option t-if="props.partner.customer_type != 'consumer'" value="consumer">Consumer</option>
                    <option t-if="props.partner.customer_type != 'patient'" value="patient">Patient</option>
                    <option t-if="props.partner.customer_type != 'caregiver'" value="caregiver">Caregiver</option>
                    <option t-if="props.partner.customer_type != 'externalpatient'" value="externalpatient">ExternalPatient</option>
                </select>
            </div>
        </xpath>
    </t>
</templates> 
