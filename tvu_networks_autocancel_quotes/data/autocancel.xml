<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate='1'>
        <record id="auto_remove_quotations_scheduler" model="ir.cron">
            <field name="name">Remove Quotations Scheduler</field>
            <field name="model_id" ref="model_sale_order"></field>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.auto_quotation_cancel()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')"/>
        </record>
    </data>
</odoo>
