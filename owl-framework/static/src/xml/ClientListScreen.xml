<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
  <t t-name="OrderReceipt" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
    <xpath expr="//div[hasclass('client-details-right')]" position="inside">
      <div class="client-detail">
        <span class="label">Type</span>
        <select class="detail client-costumer-type needsclick" name="costumer_type" t-on-change="captureChange" t-att-value="props?.partner?.costumer_type || undefined">
          <option t-att-value="undefined">-</option>
          <option t-att-value="consumer">Consumer</option>
          <option t-att-value="patient">Patient</option>
          <option t-att-value="caregiver">Caregiver</option>
          <option t-att-value="externalpatient">External Patient</option>
        </select>
      </div>
    </xpath>
  </t>
</templates>
