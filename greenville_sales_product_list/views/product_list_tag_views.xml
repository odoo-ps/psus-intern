<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="product_list_tag_action" model="ir.actions.act_window">
        <field name="name">Product List Tags</field>
        <field name="res_model">product.list.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="product_list_tag_view_tree" model="ir.ui.view">
        <field name="name">product.list.tag.tree</field>
        <field name="model">product.list.tag</field>
        <field name="arch" type="xml">
            <tree string="Product Tags" editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="product_list_tag_view_form" model="ir.ui.view">
        <field name="name">product.list.tag.form</field>
        <field name="model">product.list.tag</field>
        <field name="arch" type="xml">
            <form string="Property Tags">
                <field name="name"/>
            </form>
        </field>
    </record>
</odoo>
