<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="order_reference_template_sequence" model="ir.sequence">
            <field name="name">Order Reference</field>
            <field name="code">order.reference.template.seq</field>
            <field name="active">TRUE</field>
            <field name="padding">6</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="company_id" eval="False" />
        </record>
    </data>

    <record id="product_template_form_view_inherit" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']" position="after">
                <group>
                    <field name="product_gender" />
                    <field name="unique_upc" string="UPC" placeholder="Xxxx" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>