<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_report_saleorder_bottling_experts" model="ir.actions.report">
            <field name="name">Bottling Experts Quotation Report</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">bottling_experts_quotation_report.report_saleorder_bottling_experts</field>
            <field name="report_file">bottling_experts_quotation_report.report_saleorder_bottling_experts</field>
