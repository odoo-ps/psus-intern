<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record model="ir.ui.view" id="product_view_form">
        <field name="name">product.list.form</field>
        <field name="model">product.list</field>
        <field name="arch" type="xml">
            <form string="Product List Form">
                <sheet>
                    <h1><field name="name"/></h1>
                    <group>
                        <notebook>
                            <page string="Products">
                                <field name="product_ids"/>
                            </page>
                            <page string="Customers That Use This List">
                                <field name="customer_ids"></field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
      </field>
    </record>

    <record model="ir.ui.view" id="product_list_view_list">
        <field name="name">product.list.list</field>
        <field name="model">product.list</field>
        <field name="arch" type="xml">
            <tree string="Product List">
                <field name="name"/>
                <field name="product_ids"/>
                <field name="customer_ids"/>
            </tree>
        </field>
    </record>
</odoo>
