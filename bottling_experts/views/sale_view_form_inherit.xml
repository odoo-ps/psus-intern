<?xml version="1.0" encoding="UTF-8"?>
<odoo>
        <record id="view_order_form_view_inherit" model="ir.ui.view">
            <field name="name">view.order.form.view.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/> 
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="final_client"/>
                    <field name="opportunity_name"/>
                    <field name="travel_in"/>
                    <field name="travel_out"/>
                </xpath>
            </field>
        </record>

        <record id="task_report" model="ir.actions.report">
            <field name="name">Bottling custom report</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">bottling_experts.quotation_document</field>
            <field name="report_file">bottling_experts.quotation</field>
            <field name="binding_model_id" ref="model_sale_order"/>
            <field name="binding_type">report</field>
        </record>
</odoo>
