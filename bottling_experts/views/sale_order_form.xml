<?xml version='1.0' encoding='UTF-8'?>
<odoo>
  <record id='view_order_form' model='ir.ui.view'>
    <field name='name'>sale.order.form.inherit</field>
    <field name='model'>sale.order</field>
    <field name='inherit_id' ref='sale.view_order_form'/>
    <field name='arch' type='xml'>
      <field name='partner_id' position='after'>
        <field name='opportunity_name' />
      </field>
      <field name='payment_term_id' position='after'>
        <field name='travel_in' />
        <field name='travel_out' />
      </field>
    </field>
  </record>
  <record id='report_bottling_actions' model='ir.actions.report'>
    <field name='name'>Bottling PDF Report</field>
    <field name="model">sale.order</field>
    <field name="report_type">qweb-html</field>
    <field name="report_name">bottling_experts.report_bottling_document</field>
    <field name="report_file">bottling_experts.report_bottling</field>
    <field name="binding_model_id" ref="sale.model_sale_order" />
    <field name="binding_type">report</field>
  </record>
</odoo>
