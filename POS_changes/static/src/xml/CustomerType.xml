<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="ClientDetailsEdit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-right')]" position="after">
            <div class="client-detail">
                <span classs="label">Customer Type</span>
                <select class="CustomerType-detail needsclick" 
                        name="customer_type" 
                        t-on-change="captureChange" 
                        t-att-value="props.partner.customer_type"
                        t-att-selected="props.partner.customer_type">

                        <option value="patient">Patient</option>
                        <option value="customer">Customer</option>
                        <option value="caregiver">Caregiver</option>
                        <option value="external_patient">External Patient</option>
                </select>
            </div>
        </xpath>
    </t>
</templates>