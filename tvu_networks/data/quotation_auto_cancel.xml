<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">
        <record id="ir_cron_quotation_cancel" model="ir.cron">
            <field name="name">Cancel Old Quotation</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="type">ir.action.server</field>
            <field name="state">code</field>
            <field name="code">model.cancel_old_quotations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now().strftime('%Y-%m-%d 00:00:00') + timedelta(days=1)).strftime('%Y-%m-%d 00:00:00')" />
        </record>
    </data>
</odoo>
