<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="product_template_only_form_view_inherit_nypw">
            <field name="name">account.analytic.line.invalidate</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <field name="date" position="after">
                    <field name="current_level"></field>
                </field>
            </field>
        </record>

        <record id="timesheet_invalidate_message" model="mail.message.subtype">
            <field name="name">Review Timesheet</field>
            <field name="res_model">acccount.analytic.line</field>
            <field name="default" eval="True"/>
            <field name="description">A timesheet that you approved has been invalidated. Please review and resubmit it.</field>
        </record>
    </data>
</odoo>