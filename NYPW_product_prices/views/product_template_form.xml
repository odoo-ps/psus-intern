<?xml version="1.0" encoding="utf-8"?>


<odoo>
  <data>
    <record model="ir.ui.view" id="product_form_view_inherit_sale">
      <field name="name">sale.product.form.view</field>
      <field name="model">product.template</field>
      <field name="inherit_id" ref="product.product_template_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='uom_po_id']" position="after">
          <field name="pair_per_case" />
          <field name="price_per_pair" />
        </xpath>
        <xpath expr="//field[@name='list_price']" position="attributes">
          <attribute name="attrs">{'readonly': [('pair_per_case', '>', 0), ('price_per_pair', '>', 0)] }</attribute>
        </xpath>
      </field>
    </record>
  </data>
</odoo>