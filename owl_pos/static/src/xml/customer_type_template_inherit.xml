<?xml version="1.0" encoding="UTF-8"?>
<template id="customer_template" xml:space="preserve">
    <t t-name="customer_type_template_inherit" t-inherit="point_of_sale.ClientDetailsEdit" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('client-details-left')]" position="after">
            <div class="client-detail">
                <span class="label">Type</span>
                <select class="detail needsclick" name="customer_type" t-on-change="captureChange" t-att-value="props.partner.customer_type" t-att-selected="props.partner.customer_type">

                    <option value="consumer">Consumer</option>
                    <option value="patient">Patient</option>
                    <option value="caregiver">Caregiver</option>
                    <option value="external_patient">ExternalPatient</option>
                </select>
            </div>
        </xpath>
    </t>
</template>
